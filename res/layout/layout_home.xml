<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        <ImageView 
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_home"
            />
        <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_home"
        />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        
           
    
    <Button 
        android:id="@+id/exchange_exchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="exchange_exchange"
        />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout 
            android:id="@+id/home_offer"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_home_offer"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:clickable="true"
        >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:text="做任务"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="我的积分:"
            android:layout_marginTop="10dip"
            />
        <TextView 
            android:id="@+id/home_offer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:text="-"
            />
        </LinearLayout>
        
        <View 
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="1dip"
            />
        
        <LinearLayout 
            android:id="@+id/home_offer"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_home_ex"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:clickable="true"
        >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:text="领会员"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="今日可领会员:"
            android:layout_marginTop="10dip"
            />
        <TextView 
            android:id="@+id/home_ex_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:text="-"
            />
        </LinearLayout>
        
    </LinearLayout>
    
    
    
    <Button
        android:id="@+id/test" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        />
    </LinearLayout>
    
    
    
    
    

</FrameLayout>